{% extends "layout/base.html.twig" %}

{% block body %}
	<div class="container"><br><br>
		<h1>Les Articles</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ news.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ news.title }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ news.description }}</td>
				</tr>
				<tr>
					<th>Nom de l'image</th>
					<td>{{ news.imageName }}</td>
				</tr>
				<tr>
					<th>Cr√©er le :</th>
					<td>{{ news.createdAt ? news.createdAt|date('d-m-Y H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Modifier le :</th>
					<td>{{ news.updatedAt ? news.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_news_index') }}">back to list</a>

		<a href="{{ path('app_news_edit', {'id': news.id}) }}">editer</a>

		{{ include('news/_delete_form.html.twig') }}
	</div><br><br>

