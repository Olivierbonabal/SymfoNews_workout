{% extends "layout/base.html.twig" %}

{% block title %}Toutes les cat√©gories{% endblock %}

{% block body %}

<div class="container my-3">
    <h1>Les Categories...</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">afficher</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a>
    </div>
{% endblock %}
